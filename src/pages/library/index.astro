---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import PageFilterSection from '../../components/PageFilterSection.astro';
import { loadLibraryContent } from '../../utils/libraryContent';
import { getFilterConfigForPath } from '../../utils/filterConfig';

const libraryContent = await loadLibraryContent();
const { items } = libraryContent;
const filterConfig = await getFilterConfigForPath(
  Astro.url.pathname,
  Astro.url.searchParams,
  { libraryContent },
);
---

<StarlightPage
  frontmatter={{
    title: 'Reports Library',
    description: 'All program documents in the library',
    tableOfContents: false,
    prev: false,
    next: false,
  }}
>
  <div class="library-content">
     <p class="library-intro">
      Browse our full library of program charters, proposals, reports, and guidelines. Use the filters to narrow by year or topic.
    </p>

    {filterConfig && filterConfig.placement === 'top' && (
      <PageFilterSection config={filterConfig} />
    )}
   
    <ul class="library-list" data-library-grid>
      {items.map((item) => (
        <li
          class="library-list__item"
          data-library-card
          data-tags={JSON.stringify(item.tags)}
          data-authors={JSON.stringify(item.authors)}
          data-year={item.year ? String(item.year) : ''}
          data-date={String(item.dateValue)}
          data-index={String(item.order)}
          data-search={item.searchIndex}
        >
          <a href={item.url} class="library-list__link">{item.title}</a>
          <div class="library-list__meta">
            {item.year && <span class="library-list__year">{item.year}</span>}
            {item.authors.length > 0 && (
              <span class="library-list__authors">By {item.authors.join(', ')}</span>
            )}
          </div>
          {item.summary && (
            <div class="library-list__summary">
              {item.summary}
            </div>
          )}
          {item.tags.length > 0 && (
            <ul class="library-list__tags not-content">
              {item.tags.map((tag) => (
                <li>{tag}</li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>

    <div class="library-empty" data-library-empty hidden>
      <p>No documents match the current filters. Try adjusting your selection.</p>
    </div>
  </div>
</StarlightPage>

<style>
  .library-content {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .library-intro {
    margin: 0;
    color: var(--sl-color-text);
    font-size: 1rem;
    line-height: 1.6;
  }

  .library-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  .library-list__item {
    padding-bottom: 1.1rem;
    border-bottom: 1px solid var(--sl-color-hairline);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .library-list__link {
    font-weight: 600;
    font-size: 1.05rem;
    text-decoration: none;
  }

  .library-list__link:hover,
  .library-list__link:focus-visible {
    text-decoration: underline;
    text-decoration-thickness: 2px;
  }

  .library-list__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--sl-color-text);
  }

  .library-list__summary {
    color: var(--sl-color-text);
    font-size: 0.95rem;
    line-height: 1.55;
  }

  .library-list__tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0;
    margin: 0;
    list-style: none;
    font-size: 0.85rem;
    color: var(--sl-color-text-muted);
  }

  .library-list__tags li {
    padding: 0.1rem 0.5rem;
    border-radius: 999px;
    border: 1px solid var(--sl-color-hairline);
  }

  .library-empty {
    padding: 1.5rem;
    text-align: center;
    border: 1px dashed var(--sl-color-hairline);
    border-radius: 0.75rem;
  }
</style>
