    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 0.25rem 0.45rem;
  }

  @media (max-width: 48rem) {
    .filter-panel {
      grid-template-columns: 1fr;
      gap: 0.45rem;
    }
  }

  @media (max-width: 32rem) {
    details[data-filter-section='tags'] .filter-panel__options,
    details[data-filter-section='authors'] .filter-panel__options {
      max-height: none;
    }
  }

</style>
